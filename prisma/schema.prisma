generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model nokta_kategoriler {
  id            Int      @id
  KategoriAdiTr String?  @db.VarChar(250)
  KategoriAdiEn String?  @db.VarChar(250)
  sira          Int?
  resim         String?  @db.VarChar(250)
  parent_id     Int?
  old_id        Int?
  is_active     Boolean?
  marka_id      Int?
  img_path      String?  @db.VarChar(250)
  seo_link      String?  @unique(map: "seo_link") @db.VarChar(250)

  @@index([sira], map: "idx_kategori_sira")
  @@index([parent_id, is_active], map: "idx_parent_active")
}

model nokta_urun_markalar {
  id            Int      @id
  title         String?  @db.VarChar(250)
  img_path      String?  @db.VarChar(50)
  bilgi_basligi String?  @db.VarChar(250)
  bilgi         String?  @db.VarChar(0)
  old_id        Int?
  is_active     Boolean?
  order_by      Int?
  link_img      String?  @db.VarChar(250)
  hover_img     String?  @db.VarChar(250)
  seo_link      String?  @db.VarChar(255)
  urunler       nokta_urunler[] @relation("UrunMarka")
}

model nokta_urunler {
  id            Int       @id @default(autoincrement())
  UrunKodu      String?   @db.VarChar(256)
  UrunAdiTR     String?   @db.VarChar(256)
  UrunAdiEN     String?   @db.VarChar(256)
  OzelliklerTR  String?   @db.LongText
  OzelliklerEN  String?   @db.LongText
  BilgiTR       String?   @db.LongText
  BilgiEN       String?   @db.LongText
  KategoriID    Int?
  MarkaID       Int?
  SurucuIndir   String?   @db.VarChar(256)
  Vitrin        Boolean?
  YeniUrun      Boolean?
  rdurum        Boolean?
  ddurum        Boolean?
  tags          String?   @db.LongText
  aktif         Boolean?
  sira          Int?
  sartname      String?   @db.VarChar(256)
  sertifika     String?   @db.VarChar(256)
  datasheet     String?   @db.VarChar(256)
  manual        String?   @db.VarChar(256)
  firmware      String?   @db.VarChar(256)
  stok_giren    Boolean?
  stok_fazla    Boolean?
  create_date   DateTime? @db.DateTime(0)
  modify_date   DateTime? @db.DateTime(0)
  UygulamalarTr String?   @db.LongText
  UygulamalarEn String?   @db.LongText
  seo_link      String?   @unique(map: "seo_link") @db.VarChar(255)
  marka         nokta_urun_markalar? @relation("UrunMarka", fields: [MarkaID], references: [id])
  resimler      nokta_urunler_resimler[] @relation("UrunResimler")
}

model nokta_urunler_resimler {
  id     Int     @id
  BResim String? @db.VarChar(250)
  KResim String? @db.VarChar(250)
  UrunID Int?
  Sira   Int?
  urun   nokta_urunler? @relation("UrunResimler", fields: [UrunID], references: [id])

  @@index([UrunID, Sira], map: "idx_urun_sira")
}

model nokta_urunler_yuklemeler {
  id         Int       @id
  aciklama   String?   @db.LongText
  aciklamaEn String?   @db.LongText
  url_path   String?   @db.VarChar(500)
  dosya_adi  String?   @db.VarChar(75)
  order_by   Int?
  is_active  Boolean?
  version    String?   @db.VarChar(50)
  type       String?   @db.VarChar(50)
  datetime   DateTime? @db.DateTime(0)
  urun_id    Int?
  yukleme_id Int?
}

model nokta_yukleme_dosya_tipleri {
  id       Int     @id
  type     String? @db.VarChar(150)
  img_path String? @db.VarChar(150)
  baslik   String? @db.VarChar(250)
}

model nokta_yuklemeler {
  id         Int      @id
  baslik     String?  @db.VarChar(250)
  baslikEn   String?  @db.VarChar(250)
  dosya_yolu String?  @db.VarChar(250)
  order_by   Int?
  is_active  Boolean?
}

model net_offers {
  id          Int      @id @default(autoincrement())
  name        String?  @db.VarChar(255)
  company     String?  @db.VarChar(255)
  phone       String?  @db.VarChar(255)
  mail        String?  @db.VarChar(255)
  description String?  @db.VarChar(255)
  prod_id     Int?
  date        DateTime @default(now()) @db.Timestamp(0)
}


model nokta_ebulten {
  id          Int      @id @default(autoincrement())
  email       String?  @db.VarChar(255)
  create_date DateTime @default(now()) @db.Timestamp(0)
}

model category_brand_rel {
  id       Int  @id @default(autoincrement())
  marka_id Int?
  kat_id   Int?
}

model slider {
  id        Int      @id @default(autoincrement())
  link      String?  @db.Text
  photo     String?  @db.Text
  is_active Int
  order_by  Int?
  date      DateTime @default(now()) @db.Timestamp(0)
}
